{
  "name": "office-editor4ai",
  "version": "1.0.0",
  "description": "Office AddIn for AI - Multi-platform support for Excel, Word, and PowerPoint",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "install:all": "pnpm install",
    "build": "pnpm -r --parallel build",
    "build:dev": "pnpm -r --parallel build:dev",
    "dev:excel": "cd excel-editor4ai && pnpm dev-server",
    "dev:word": "cd word-editor4ai && pnpm dev-server",
    "dev:ppt": "cd ppt-editor4ai && pnpm dev-server",
    "start:excel": "cd excel-editor4ai && pnpm start",
    "start:word": "cd word-editor4ai && pnpm start",
    "start:ppt": "cd ppt-editor4ai && pnpm start",
    "stop:excel": "cd excel-editor4ai && pnpm stop",
    "stop:word": "cd word-editor4ai && pnpm stop",
    "stop:ppt": "cd ppt-editor4ai && pnpm stop",
    "validate:excel": "pnpm --filter excel-editor4ai validate",
    "validate:word": "pnpm --filter word-editor4ai validate",
    "validate:ppt": "pnpm --filter ppt-editor4ai validate",
    "validate:all": "pnpm -r --parallel validate",
    "lint": "pnpm -r --parallel lint",
    "lint:fix": "pnpm -r --parallel lint:fix",
    "clean": "pnpm -r exec rm -rf node_modules dist && rm -rf node_modules",
    "clear-cache": "bash scripts/clear-office-cache.sh",
    "yo:office": "yo office"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-plugin-office-addins": "^4.0.3",
    "generator-office": "^3.0.2",
    "office-addin-lint": "^3.0.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.46.2",
    "yo": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
